<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SafeIn_Mobile.Views.UserPage"             
             xmlns:viewmodels="clr-namespace:SafeIn_Mobile.ViewModels"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             >
    <!--<ContentPage.BindingContext>
        <viewmodels:UserViewModel Name="2" Email="2"/>
    </ContentPage.BindingContext>-->

    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="{Binding Email}" FontSize="Title" />
            <Label Text="{Binding Name}" FontSize="Subtitle" />
            <Image Source="{Binding QrCode}" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />

            <Label Text="QR code will expire in:" FontSize="Subtitle" Margin="0,20,0,0" />
            <Label Text="{Binding TimeRemaining}" FontSize="Large" Margin="0,10,0,0" />
            <Label Text="{Binding ErrorMessage}" FontSize="Large" Margin="0,10,0,0" />
        </StackLayout>

    </ContentPage.Content>

</ContentPage>